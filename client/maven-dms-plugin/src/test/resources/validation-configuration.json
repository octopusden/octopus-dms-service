{
  "fileValidation": {
    "enabled": true,
    "requiredPatterns": [
      {
        "pattern": "((.*[/\\\\])|^)licenses[/\\\\]THIRD-PARTY.txt$",
        "options": []
      },
      {
        "pattern": "((.*[/\\\\])|^)COPYRIGHT$",
        "options": []
      }
    ]
  },
  "nameValidation": {
    "enabled": true,
    "allowedPattern": {
      "pattern": "^(?!.*([Uu][Nn][Aa][Ll][Ll][Oo][Ww][Ee][Dd])).*$",
      "options": []
    }
  },
  "contentValidation": {
    "enabled": true,
    "parallelism": 20,
    "exclude": [
      "**.bin",
      "**.prm",
      "**.exe",
      "**.dll",
      "**.so",
      "**.gif",
      "**.jpg",
      "**.png",
      "**.class",
      "**.xsd",
      "**.xsb",
      "**.wsdl"
    ],
    "forbiddenTokens": [
      "unallowed"
    ],
    "forbiddenPatterns": [
      {
        "pattern": ".*unallowed.*",
        "options": [
          "IGNORE_CASE"
        ]
      }
    ]
  }
}